    <script>
      // Demo functionality
      let demoRunning = true;
      let updateInterval;

      function initDemo() {
        // Initialize demo with live data updates
        updateDemo();
        updateInterval = setInterval(updateDemo, 5000); // Update every 5 seconds
        
        // Setup navigation
        setupNavigation();
      }

      function updateDemo() {
        if (!demoRunning) return;
        
        // Simulate live data updates
        const cpuUsage = Math.floor(Math.random() * 30) + 15; // 15-45%
        const memoryUsage = (Math.random() * 0.5 + 0.8).toFixed(1); // 0.8-1.3GB
        const diskUsage = Math.floor(Math.random() * 20) + 60; // 60-80%
        const activeContainers = Math.floor(Math.random() * 3) + 7; // 7-10
        
        document.getElementById('cpu-usage').textContent = cpuUsage + '%';
        document.getElementById('memory-usage').textContent = memoryUsage + 'GB';
        document.getElementById('disk-usage').textContent = diskUsage + '%';
        document.getElementById('active-containers').textContent = activeContainers;
        
        // Update timestamp
        const now = new Date();
        document.getElementById('last-update').textContent = now.toLocaleTimeString();
      }

      function setupNavigation() {
        const navItems = document.querySelectorAll('.demo-nav-item');
        const sections = document.querySelectorAll('.demo-section');
        
        navItems.forEach(item => {
          item.addEventListener('click', function() {
            const targetTab = this.getAttribute('data-tab');
            
            // Update active states
            navItems.forEach(nav => nav.classList.remove('active'));
            sections.forEach(section => section.classList.remove('active'));
            
            this.classList.add('active');
            document.getElementById(targetTab).classList.add('active');
          });
        });
      }

      function refreshDemo() {
        updateDemo();
        // Add visual feedback
        const btn = event.target.closest('.demo-control-btn');
        btn.innerHTML = '<i class="fas fa-check"></i> Refreshed';
        setTimeout(() => {
          btn.innerHTML = '<i class="fas fa-refresh"></i> Refresh';
        }, 1000);
      }

      function toggleDemo() {
        demoRunning = !demoRunning;
        const btn = event.target.closest('.demo-control-btn');
        
        if (demoRunning) {
          btn.innerHTML = '<i class="fas fa-pause"></i> Pause';
          updateInterval = setInterval(updateDemo, 5000);
        } else {
          btn.innerHTML = '<i class="fas fa-play"></i> Resume';
          clearInterval(updateInterval);
        }
      }

      // Initialize demo when page loads
      document.addEventListener('DOMContentLoaded', initDemo);
    </script>
